type Query {
  graph: Graph
}

type Error {
  Message: String
}

input Text {
  translations: [Translation!]!
}

input Translation {
  language: String
  content: String
}

type Mutation {
  submitVote(source: ID!, target: ID!, value: Float!): Error
  createNode(description: Text): Error
  editNode(id: ID!, description: Text): Error
}

type Node {
  id: ID!
}

type Edge {
  id: ID!
  from: ID! # node id
  to: ID! # node id
}

type Graph {
  nodes: [Node!]
  edges: [Edge!]
}
